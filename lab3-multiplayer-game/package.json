{
  "name": "ps4",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^22.12.x"
  },
  "scripts": {
    "compile": "tsc",
    "start": "tsc && node --require source-map-support/register dist/src/server.js",
    "simulation": "tsc && node --require source-map-support/register dist/src/simulation.js",
    "lint": "tsc && eslint",
    "test": "tsc && mocha --require source-map-support/register dist/test --reporter spec --colors",
    "coverage": "c8 npm test"
  },
  "mocha": {
    "reporter": "spec",
    "exit": true
  },
  "c8": {
    "extension": [
      ".js"
    ],
    "exclude": [
      "coverage/"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "express": "^5.0.1",
    "http-status-codes": "^2.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/connect": "^3.4.38",
    "@types/estree": "^1.0.8",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/http-errors": "^2.0.5",
    "@types/http-status-codes": "^1.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.7",
    "@types/qs": "^6.14.0",
    "@types/range-parser": "^1.2.7",
    "@types/send": "^1.2.1",
    "@types/serve-static": "^2.2.0",
    "c8": "^10.1.3",
    "eslint": "^9.20.1",
    "eslint-formatter-checkstyle": "^8.40.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "mocha": "^11.0.1",
    "source-map-support": "^0.5.21",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  }
}
